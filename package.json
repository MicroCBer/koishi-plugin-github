{
  "name": "koishi-plugin-github",
  "description": "GitHub Toolkit for Koishi",
  "version": "5.1.1",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "Shigma <shigma10826@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koishijs/koishi-plugin-github.git"
  },
  "bugs": {
    "url": "https://github.com/koishijs/koishi-plugin-github/issues"
  },
  "homepage": "https://github.koishi.chat",
  "keywords": [
    "bot",
    "chatbot",
    "koishi",
    "plugin",
    "github",
    "webhook"
  ],
  "koishi": {
    "service": {
      "required": [
        "database"
      ],
      "optional": [
        "assets"
      ],
      "implements": [
        "github"
      ]
    }
  },
  "scripts": {
    "build": "atsc -b",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test": "mocha --exit -r esbuild-register -r yml-register tests/*.spec.ts",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/marked": "^4.0.7",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.8.3",
    "@koishijs/plugin-database-memory": "^1.5.0",
    "@koishijs/plugin-help": "^1.2.3",
    "@koishijs/plugin-mock": "^2.1.0",
    "atsc": "^1.1.2",
    "c8": "^7.12.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-shape": "^1.0.0",
    "esbuild": "^0.14.54",
    "esbuild-register": "^3.3.3",
    "jest-mock": "^28.1.3",
    "koishi": "^4.9.4",
    "koishi-plugin-puppeteer": "^3.0.2",
    "mocha": "^9.2.2",
    "nock": "^13.2.9",
    "shx": "^0.3.4",
    "typescript": "^4.8.4",
    "yml-register": "^1.1.0",
    "vitepress": "1.0.0-alpha.19"
  },
  "peerDependencies": {
    "koishi": "^4.8.4",
    "koishi-plugin-puppeteer": "^3.0.2"
  },
  "peerDependenciesMeta": {
    "koishi-plugin-puppeteer": {
      "optional": true
    }
  },
  "dependencies": {
    "@octokit/webhooks-types": "^5.8.0",
    "marked": "^4.1.1"
  }
}
